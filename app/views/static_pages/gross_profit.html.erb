<% provide(:title, 'Gross Profit Margin Calculator') %>
<h1>Gross Profit Margin Calculator</h2>

	<div class="row">
		<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
			<h2 class="input-label">Cost:</h2>
			<div class="input-group">
  			<span class="input-group-addon">$</span>
  			<input type="number" step=".01" class="form-control gross-profit-cost">
			</div>
			<h2 class="input-label">Price to Consumer:</h2>
			<div class="input-group">
  			<span class="input-group-addon">$</span>
  			<input type="number" step=".01" class="form-control gross-profit-ptc">
			</div>
			<h2 class="input-label">Gross Profit Margin:</h2>
			<div class="input-group">
  			<input type="number" step=".01" class="form-control gross-profit-margin">
  			<span class="input-group-addon">%</span>
			</div>
			<div class="input-group">
				<button type="button" class="btn btn-large btn-primary">Calculate</button>
			</div>
		</div>
	</div>
