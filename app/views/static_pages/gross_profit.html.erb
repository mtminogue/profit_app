<% provide(:title, 'Gross Profit Margin Calculator') %>
<% provide(:keywords, 'gross, profit, margin, calculator, business, financial') %>
<% provide(:description, 'Business calculators for owners, managers, and sales forces that are formatted for any device. Try the Gross Profit Margin Calculator.') %>
<h1>Gross Profit Margin Calculator</h1>

	<div class="row">
		<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
			<div class="col-xs-8 col-xs-offset-2">
				<label for="cost">Cost:</label>
				<div class="input-group">
  				<span class="input-group-addon">$</span>
  				<input type="number" step=".01" class="form-control calc-cost" id="cost">
				</div>
				<label for="ptc">Sell Price:</label>
				<div class="input-group">
  				<span class="input-group-addon">$</span>
  				<input type="number" step=".01" class="form-control calc-ptc" id="ptc">
				</div>
				<label for="gross-profit">Gross Profit Margin:</label>
				<div class="input-group">
  				<input type="number" step=".01" class="form-control calc-margin" id="gross-profit">
  				<span class="input-group-addon">%</span>
				</div>
			</div>
		</div>
	</div>
